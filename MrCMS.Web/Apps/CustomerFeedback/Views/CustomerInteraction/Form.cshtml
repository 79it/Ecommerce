@model MrCMS.Web.Apps.CustomerFeedback.Models.CustomerInteractionPostModel
<hr/>
<h3>Create new interaction record</h3>
@using (Html.BeginForm("Submit", "CustomerInteraction", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Order.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Message)
        @Html.TextAreaFor(x => x.Message, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(x => x.Message)
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
}